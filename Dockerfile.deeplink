FROM python:3.12-slim

WORKDIR /app

# Install uv (cached layer)
RUN pip install uv

# Install dependencies FIRST (cached layer - only rebuilds when pyproject.toml/uv.lock change)
COPY pyproject.toml uv.lock ./
RUN uv sync --frozen --no-install-project

# Copy only what the deeplink service needs (small layer - fast to push)
COPY db ./db
COPY lib ./lib
COPY api ./api
COPY services ./services

EXPOSE 8000

CMD [".venv/bin/uvicorn", "api.deeplink.app:app", "--host", "0.0.0.0", "--port", "8000"]
